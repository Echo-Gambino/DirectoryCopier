<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*" 
           Name="DirectoryCopierInstaller" 
           Language="1033"
           Version="1.0.0.0" 
           Manufacturer="ExampleManufacturer"
           UpgradeCode="2c0f3907-8361-492f-bd39-f6b13a884aea">
		<Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine" />

		<MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes"/>
    
		<Feature Id="ProductFeature" Title="DirectoryCopierInstaller" Level="1">
			<ComponentGroupRef Id="ProductComponents" />
		</Feature>
	</Product>

	<Fragment>
		<Directory Id="TARGETDIR" Name="SourceDir">
			<Directory Id="ProgramFilesFolder">
				<Directory Id="INSTALLFOLDER" Name="DirectoryCopierInstaller" />
			</Directory>
		</Directory>
	</Fragment>

	<Fragment>
		<ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component Id="ProductComponent">
        <File Source="$(var.DirectoryCopier.TargetPath)" />
      </Component>
		</ComponentGroup>
	</Fragment>
</Wix>
